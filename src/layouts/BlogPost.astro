---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main class="w-full max-w-full m-0 text-neutral-800">
			<article>
				<img
					width={960}
					height={510}
					src={heroImage}
					alt={title}
					class="rounded-xl shadow-xl shadow-blue-700/20 mx-auto"
					transition:name={heroImage}
				/>

				<div class="w-[720px] max-w-full m-auto p-4">
					<div class="text-center py-3 mb-6 border-b border-neutral-300">
						<div class="mb-2 text-neutral-500">
							<FormattedDate date={pubDate} />
						</div>
						<h1 class="mt-3">{title}</h1>
					</div>

					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
