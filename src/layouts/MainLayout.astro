---
interface Props {
  title: string;
}

import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION } from "../consts";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="flex flex-col min-h-screen h-full bg-top bg-no-repeat bg-lights-sun bg-slate-950 text-neutral-300"
  >
    <Header />
    <main class="md:mt-16 mt-20 w-[1000px] px-2 sm:px-16 md:px-2">
      <slot />
    </main>
    <Footer />
  </body>
</html>
