---
import TimeLine from "../components/TimeLine.astro";
import { resume } from "../data/resume";
import MainLayout from "../layouts/MainLayout.astro";

const { profile, education, experience, certifications, skills } = resume;
---

<MainLayout title="Mi currÃ­culum" description="" isMain>
	<h3 class="text-3xl w-full font-bold mt-0 mb-5">Profile</h3>

	<p class="mb-10 text-lg text-neutral-400">
		{profile}
	</p>

	<h3 class="text-3xl w-full font-bold mb-5">Education</h3>

	<div class="time-line-container grid gap-4 mb-10">
		{
			education.map(({ title }) => (
				<TimeLine
					title={title}
					subtitle="[start year] to [end year] at [Study Center Name], [City], [Country]"
				/>
			))
		}
	</div>

	<h3 class="text-3xl w-full font-bold mb-5">Experience</h3>

	<div class="time-line-container mb-10">
		{
			experience.map(({ title, description }) => (
				<TimeLine
					title={title}
					subtitle="From [Start Date] to [End Date] at [Company], [City], [Country]"
				>
					{description}
				</TimeLine>
			))
		}
	</div>

	<h3 class="text-3xl w-full font-bold mb-5">Certifications</h3>

	<ul class="list-disc mx-6 mb-10 grid gap-2 text-lg text-neutral-400">
		{
			certifications.map(({ title, link }) => (
				<li>
					<a href={link} target="_blank">
						{title}
					</a>
				</li>
			))
		}
	</ul>

	<h3 class="text-3xl w-full font-bold mb-5">Skills</h3>

	<ul
		class="list-disc mx-6 grid md:grid-cols-4 grid-cols-2 text-lg text-neutral-400"
	>
		{skills.map((skill) => <li>{skill}</li>)}
	</ul>
</MainLayout>
