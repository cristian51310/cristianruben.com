---
import Button from "../components/Button.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title="Pagina no encontrada"
  description="Pagina no encontrada"
  isMain
>
  <div class="flex flex-col justify-center items-center -mt-20">
    <h1 class="font-bold text-9xl">404</h1>

    <h3 class="mb-16 -mt-8">Page not found</h3>

    <p class="max-w-lg text-center text-neutral-400">
      The page you are looking for might have been removed, had its name
      changed, or is temporarily unavaliable
    </p>

    <div class="flex max-w-lg mt-8">
      <Button href="/" text="Back To Home" />
    </div>
  </div>
</MainLayout>
