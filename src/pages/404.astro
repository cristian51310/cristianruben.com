---
import Button from "../components/Button.astro";
import { useTranslate, useTranslateLink } from "../i18n/utils";
import MainLayout from "../layouts/MainLayout.astro";

const t = useTranslate(Astro.currentLocale);
const translatedLink = useTranslateLink(Astro.currentLocale);
---

<MainLayout title={t("TITLE_404")} description={t("DESCRIPTION_404")} isMain>
  <div class="flex flex-col justify-center items-center -mt-20">
    <h1 class="font-bold text-9xl">404</h1>

    <h3 class="mb-16 -mt-8">
      {t("TITLE_404")}
    </h3>

    <p class="max-w-lg text-center text-neutral-400">
      {t("DESCRIPTION_404")}
    </p>

    <div class="flex max-w-lg mt-8">
      <Button href={translatedLink("/")} text="Back To Home" icon="mdi:home" />
    </div>
  </div>
</MainLayout>
