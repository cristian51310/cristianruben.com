---
import NavItem from "./NavItems.astro";

export const links = [
  {
    href: "/",
    label: "nav.home",
  },
  {
    href: "/recommendations",
    label: "nav.recommendations",
  },
  {
    href: "https://cristianblog.vercel.app/",
    label: "nav.blog",
  },
];
---

<nav class="flex justify-center mt-8">
  <div
    class="flex px-3 md:px-2 py-2 text-lg border rounded-xl
    dark:bg-neutral-600/20 dark:border-neutral-400/10 dark:text-zinc-400
    bg-neutral-400/10 border-neutral-600/10 text-zinc-900"
  >
    {links.map(({ href, label }) => <NavItem href={href} label={label} />)}
  </div>
</nav>

<style>
  @media print {
    nav {
      display: none;
    }
  }
</style>
