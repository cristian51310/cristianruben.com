---
import { useTranslate } from "../i18n/utils";
const t = useTranslate(Astro.currentLocale);
---

<div
  class="inline-flex items-center justify-center px-3 py-1.5 border rounded-md dark:border-lime-600/60 border-green-600 bg-lime-800/10 dark:bg-lime-700/20"
>
  <span class="mr-2 flex size-3 items-center">
    <span
      class="absolute flex size-2 rounded-full opacity-75 animate-ping dark:bg-lime-500 bg-green-700"
    ></span>
    <span
      class="relative flex size-2 rounded-full dark:bg-lime-500 bg-green-600"
    ></span>
  </span>

  <span class="text-sm dark:text-lime-500 text-green-700">
    {t("STATUS_WORK")}
  </span>
</div>
