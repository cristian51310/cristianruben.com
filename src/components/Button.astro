---
interface Props {
  text?: string;
  href: string | undefined;
  icon: string;
}

const { text, href, icon } = Astro.props;

import { Icon } from "astro-icon";
---

<a
  href={href}
  class="bg-neutral-800 text-neutral-300 w-full text-center rounded-lg text-base py-1 border border-neutral-700"
>
  <span class="flex justify-center items-center">
    <Icon name={icon} class="w-4 mr-2" />
    {text}
  </span>
</a>
