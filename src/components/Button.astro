---
interface Props {
  text?: string;
  href: string | undefined;
  icon?: string;
}

const { text, href, icon } = Astro.props;

import { Icon } from "astro-icon";
---

<a
  href={href}
  class="bg-neutral-800 w-full text-center rounded-lg py-1 px-3 border border-neutral-700"
>
  <span class="flex justify-center items-center gap-2">
    {icon && <Icon name={icon} class="w-4" />}
    {text}
  </span>
</a>
