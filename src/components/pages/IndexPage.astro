---
import { useTranslate } from "../../i18n/utils";
import MainLayout from "../../layouts/MainLayout.astro";
import Card from "../Card.astro";
import SocialIcons from "../SocialIcons.astro";
import StatusWork from "../StatusWork.astro";

const t = useTranslate(Astro.currentLocale);
---

<MainLayout title={t("MAIN_TITLE")} description={t("MAIN_DESCRIPTION")} isMain>
  <div
    class="flex md:flex-row flex-col items-start md:items-center gap-8 my-6 mb-10 md:mb-20"
  >
    <img
      src="/images/portrait.webp"
      alt="Cristian Ruben Figueroa Espinoza"
      class="md:size-48 size-40"
    />
    <div>
      <h1 class="text-[24px] md:text-4xl font-bold mb-4 mt-0 text-amber-200/90">
        Cristian Ruben Figueroa
      </h1>
      <h2 class="text-base md:text-lg my-1 mb-4">
        {t("MAIN_DESCRIPTION")}
      </h2>
      <StatusWork />
      <SocialIcons class="mt-5" />
    </div>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-5 gap-0 md:gap-5 mt-10">
    <div class="flex flex-col col-span-3 gap-5">
      <section>
        <Card
          title={t("RESUME_TITLE")}
          href="/projects"
          icon="mdi:calendar-outline"
        >
          <p class="text-base md:text-lg m-0">
            {t("RESUME_CARD_DESCRIPTION")}
          </p>
        </Card>
      </section>

      <section>
        <Card title={t("ABOUT_ME")} icon="ion:person-outline">
          <p class="text-base md:text-lg">
            {t("ABOUT_ME_DESCRIPTION")}
          </p>
          <p class="hidden md:block text-base md:text-lg">
            {t("ABOUT_ME_DESCRIPTION_2")}
          </p>
        </Card>
      </section>
    </div>

    <div class="flex flex-col gap-5 col-span-2 mt-5 md:mt-0">
      <section>
        <Card title={t("MY_PROJECTS")} href="/#projects" icon="ep:suitcase">
          <p class="text-base md:text-lg m-0">
            {t("MY_PROJECTS_CARD_DESCRIPTION")}
          </p>
        </Card>
      </section>

      <section>
        <Card
          title={t("RECOMMENDATIONS_TITLE")}
          href="/recommendations"
          icon="mdi:stars"
        >
          <p class="text-base md:text-lg m-0">
            {t("RECOMMENDATIONS_CARD_DESCRIPTION")}
          </p>
        </Card>
      </section>

      <section>
        <Card title={t("BLOG_TITLE")} href="/blog" icon="carbon:blog">
          <p class="text-base md:text-lg m-0">
            {t("BLOG_DESCRIPTION")}
          </p>
        </Card>
      </section>
    </div>
  </div>
</MainLayout>

<style>
  section {
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 13%;
  }

  @keyframes reveal {
    from {
      opacity: 0;
      translate: 0 70px;
    }
    to {
      opacity: 1;
      translate: 0 0;
    }
  }
</style>
