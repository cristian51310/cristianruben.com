---
import { resume } from "@/data/resume";
import Card from "../Card.astro";
import Section from "../Section.astro";

const { education } = resume;
---

<Section title="Educacion">
  <div class="flex flex-col gap-4 mt-2 print:mt-1">
    {
      education.map((grade) => {
        const { title, start, end, place, country } = grade;

        return (
          <Card class="p-4 px-5 flex flex-col gap-2 print:gap-0 print:p-0">
            <header class="flex justify-between items-center">
              <h3 class="md:text-xl text-lg font-bold print:text-sm">
                {title}
              </h3>
              <span class="text-neutral-600 dark:text-neutral-400 print:text-xs md:text-base text-xs">
                {start} - {end}
              </span>
            </header>
            <footer class="md:text-base text-sm">
              <p>
                {place} - {country}
              </p>
            </footer>
          </Card>
        );
      })
    }
  </div>
</Section>
