---
import { resume } from "@/data/resume";
import { useTranslate } from "@/i18n/utils";
import ProjectCard from "../ProjectCard.astro";
import Section from "../Section.astro";

const projects = resume.projects;

const t = useTranslate(Astro.currentLocale);
---

<Section
  id="projects"
  title={t("MY_PROJECTS")}
  subtitle={t("MY_PROJECTS_DESCRIPTION")}
/>

<div
  id="projects"
  class="flex gap-5 overflow-x-auto w-full rounded-2xl overflow-hidden md:bg-neutral-700/10 py-4 border-neutral-400/10 md:border px-6 sm:px-0"
>
  {projects.map((project) => <ProjectCard project={project} />)}
</div>

<style>
  #projects {
    scrollbar-width: none;
  }

  @media print {
    #projects {
      display: none;
    }
  }
</style>
