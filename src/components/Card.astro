---
import { Icon } from "astro-icon";
const { title, href } = Astro.props;
---

<a
  href={href}
  class="rounded-2xl group p-4 md:p-7 md:py-5 w-full bg-gray-700/40 backdrop-blur-md"
>
  <div class="flex justify-between items-center">
    <h5 class="mt-0 mb-3 text-base md:text-lg font-semibold text-start group-hover:text-amber-400">
      {title}
    </h5>

    <Icon
      name="mdi:arrow-right"
      class="w-6 h-6 text-neutral-200 -ml-3 group-hover:translate-x-2 group-hover:text-amber-400 transition-transform"
    />
  </div>

  <slot />
</a>
