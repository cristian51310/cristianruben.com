---
interface Props {
  title: string;
  description: string;
  href: string;
  image: string;
}

const { title, description, href, image } = Astro.props;
---

<div id="tool-card" class="group flex flex-col">
  <div
    class="flex flex-col md:gap-4 md:flex-row border border-transparent p-6 py-3 bg-gray-700/40 md:group-hover:border-blue-400/30 rounded-2xl"
  >
    <img src={image} alt={title} class="sm:size-20 size-14" />

    <div>
      <h2 class="text-lg font-semibold">
        <a href={href}>
          <span class="absolute z-20 -inset-y-6 -inset-x-4"></span>
          <span class="relative z-10">{title}</span>
        </a>
      </h2>
      <p class="mt-2 text-base">
        {description}
      </p>
    </div>
  </div>
</div>

<style>
  #tool-card {
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 20%;
  }

  @keyframes reveal {
    from {
      opacity: 0;
      translate: 0 70px;
    }
    to {
      opacity: 1;
      translate: 0 0;
    }
  }
</style>
