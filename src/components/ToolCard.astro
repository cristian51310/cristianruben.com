---
interface Props {
  title: string;
  description: string;
  href: string;
  image: string;
}

const { title, description, href, image } = Astro.props;
---

<div id="tool-card" class="group flex flex-col">
  <div
    class="flex flex-col md:gap-4 md:flex-row p-6 py-4 bg-neutral-800/40 rounded-xl"
  >
    <img src={image} alt={title} class="sm:size-20 size-14" />

    <div>
      <h2 class="text-lg font-semibold">
        <a href={href}>
          <span class="absolute z-20 -inset-y-6 -inset-x-4"></span>
          <span class="relative z-10 group-hover:underline">{title}</span>
        </a>
      </h2>
      <p class="mt-2 text-base leading-8">
        {description}
      </p>
    </div>
  </div>
</div>

<style>
  #tool-card {
    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 30%;
  }

  @keyframes reveal {
    from {
      opacity: 0.3;
      translate: 0 70px;
    }
    to {
      opacity: 1;
      translate: 0 0;
    }
  }
</style>
